unit uPessoaController;

interface

uses
  uPessoaModel, System.SysUtils, FireDAC.Comp.Client;

type
  TPessoaController = class
  private
    FPessoa: TPessoaModel;

  public
    constructor Create;
    destructor Destroy; override;

    function Gravar: Integer;

    property Pessoa: TPessoaModel read FPessoa write FPessoa;
  end;

implementation

{ TEnderecoController }


constructor TPessoaController.Create;
begin
  FPessoa := TPessoaModel.Create;
end;

destructor TPessoaController.Destroy;
begin
  FPessoa.Free;

  inherited;
end;

function TPessoaController.Gravar: Integer;
begin
  Result := FPessoa.Gravar;
end;

end.
