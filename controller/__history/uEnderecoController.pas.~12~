unit uEnderecoController;

interface

uses
  uEndereco, System.SysUtils, FireDAC.Comp.Client;

type
  TEnderecoController = class
  private
    FEndereco: TEndereco;

  public
    constructor Create;
    destructor Destroy; override;

    function Salvar: Boolean;

    property Endereco: TEndereco read FEndereco write FEndereco;
  end;

implementation

{ TEnderecoController }


constructor TEnderecoController.Create;
begin
  FEndereco := TEndereco.Create;
end;

destructor TEnderecoController.Destroy;
begin
  FEndereco.Free;

  inherited;
end;

function TEnderecoController.Salvar: Boolean;
begin
  Result := FEndereco.Gravar;
end;

end.
